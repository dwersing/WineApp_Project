<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                write_tab: False
                id: username
                hint_text: "Username"
                multiline: False
                focus: True
                on_text_validate: password.focus = True
            TextInput:
                write_tab: False
                id: password
                hint_text: "Password"
                multiline: False
                password: True
                on_text_validate: root.log_in(root.ids.username.text, root.ids.password.text)
            RelativeLayout:
                Button:
                    text: "Login"
                    on_release: root.log_in(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Label:
                id: wrong_log_in_creds
                text: ''

        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0, 0.5, 1, 1
            Button:
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0, 0.5, 1, 1
                text: "Sign Up"
                on_press: root.sign_up()


<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Signup to keep a record of all your favorite wines and personal notes!"
        TextInput:
            write_tab: False
            id: username
            multiline: False
            hint_text: "Username"
        TextInput:
            write_tab: False
            id: password
            multiline: False
            hint_text: "Password"
            password: True
        Button:
            text: "Submit"
            on_press: root.sign_up_user(root.ids.username.text, root.ids.password.text)
        Label:
            id: empty_cred_field
            text: ''

<MainScreen>:
    GridLayout:
        cols: 1
        padding: 25, 25
        spacing: 25, 25
        RelativeLayout:
            Button:
                text: "Log Out"
                on_press: root.log_out()
                size_hint: 0.25, 0.25
                pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        Label:
            text: "Which wine are you trying to look up?"
        TextInput:
            write_tab: False
            id: year
            hint_text: "Year (Numbers Only)"
        TextInput:
            write_tab: False
            id: winery
            hint_text: "Winery"
        TextInput:
            write_tab: False
            id: varietal_or_title
            hint_text: "Varietal and/or Title "
        Button:
            text: "Search"
            on_press: root.get_review(root.ids.year.text, root.ids.winery.text, root.ids.varietal_or_title.text, root.ids.review.text)
        ScrollView:
            Label:
                id: review
                text: ''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

        Button:
            text: "Add New Wine"
            on_press: root.add_new_wine_screen()

<AddWineScreen>:
    GridLayout:
        cols: 1
        padding: 25, 25
        spacing: 25, 25
        RelativeLayout:
            Button:
                text: "Log Out"
                on_press: root.log_out()
                size_hint: 0.25, 0.25
                pos_hint: {'center_x': 0.9, 'center_y': 0.9}
        Label:
            text: "Please enter a wine to add to your collection"
        TextInput:
            write_tab: False
            id: add_year
            hint_text: "Year (Numbers Only)"
        TextInput:
            write_tab: False
            id: add_winery
            hint_text: "Winery"
        TextInput:
            write_tab: False
            id: add_varietal_or_title
            hint_text: "Varietal or Title"
        TextInput:
            write_tab: False
            id: add_review
            hint_text:  "Write your review of the wine"
        Button:
            text: "Add Wine"
            on_press: root.add_wine(root.ids.add_year.text, root.ids.add_winery.text, root.ids.add_varietal_or_title.text, root.ids.add_review.text)

<RootWidget>:
    LoginScreen:
        name: "login_screen"

    SignUpScreen:
        name: "sign_up_screen"

    MainScreen:
        name: "main_screen"

    AddWineScreen:
        name: "add_wine_screen"

